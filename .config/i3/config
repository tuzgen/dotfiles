# bind program to workspace and focus to them on startup:
assign [class="(?i)librewolf"] $ws1
assign [class="Anki"] $ws1
assign [class="Alacritty"] $ws2
assign [class="mpv"] $ws3
assign [class="elisa"] $ws3
assign [class="Kodi"] $ws3
assign [class="kodi"] $ws3
assign [class="discord"] $ws4
assign [class="ts3client_linux_amd64"] $ws4
assign [class="vesktop"] $ws4
assign [class="steam"] $ws5
assign [class="lutris"] $ws5
assign [class="jetbrains-studio"] $ws6
assign [class="SonoBus"] $ws7

# automatic set focus new window if it opens on another workspace than the current:
for_window [class=Alacritty] focus
